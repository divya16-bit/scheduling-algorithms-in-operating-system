package javaapplication21;

import java.util.*;
public class JavaApplication21 {

    static void findWaitingTime(int processes[], int n, 
                 int bt[], int wt[], int quantum) 
    { 
     // it stores remaining burst times. 
        int rem_bt[] = new int[n]; 
        for (int i = 0 ; i < n ; i++) 
            rem_bt[i] =  bt[i]; 
       
        int t = 0; // Current time 
       
        // tranversing loop till processes are finisehd
        while(true) 
        { 
            boolean done = true;  
            for (int i = 0 ; i < n; i++) 
            { 
                if (rem_bt[i] > 0) //yeh process abhi nhi kr sakte;
                { 
                    done = false;
       
                    if (rem_bt[i] > quantum) 
                    { 
                        t += quantum; // kitne time tak process chala
                        rem_bt[i] -= quantum; 
                    } 
       
                    // Last cycle for this process 
                    else
                    { 
                        t = t + rem_bt[i];  //kitne time tak process chala
       
                        // Waiting time = current time minus time used by this process jo ki t hai
                        wt[i] = t - bt[i]; 
       
                        // saare process executed
                        rem_bt[i] = 0; 
                    } 
                } 
            } 
       
            // If all processes are done 
            if (done == true) 
              break; 
        } 
    } 
    static void findavgTime(int processes[], int n, int bt[], int quantum) 
    { 
        int wt[] = new int[n], tat[] = new int[n]; 
        int total_wt = 0, total_tat = 0; 
        findWaitingTime(processes, n, bt, wt, quantum); 
        System.out.println("Processes " + " Burst time " + " Waiting time "); 
        for (int i=0; i<n; i++) 
        { 
            total_wt = total_wt + wt[i]; 
            total_tat = total_tat + tat[i]; 
            System.out.println(" " + (i+1) + "\t\t" + bt[i] +"\t " + wt[i]); 
        } 
        System.out.println("Average waiting time = " +(float)total_wt / (float)n); 
    } 
      
    public static void main(String[] args) {
        // TODO code application logic here 
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter number of Process: "); 
        int n=sc.nextInt();
        int processes[] = new int[n];    
        int burst_time[] = new int[n];   
        for(int i=0;i<n;i++){
            System.out.println("Enter Burst Time: "); 
            burst_time[i] = sc.nextInt();
        }
        int quantum = 2; 
        findavgTime(processes, n, burst_time, quantum); 
    }
    
}
